# Frontend Dockerfile
FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy all necessary files
COPY index.html vite.config.ts tsconfig.json tailwind.config.js components.json ./
COPY src/ ./src/
COPY config/ ./config/

EXPOSE 5173

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
