FROM python:3.11-slim

WORKDIR /app

# Install system dependencies for audio processing and PyTorch
RUN apt-get update && apt-get install -y \
    build-essential \
    libsndfile1 \
    libsndfile1-dev \
    ffmpeg \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY backend/requirements.txt .

# Install Python dependencies with retry logic
RUN pip install --no-cache-dir -r requirements.txt

# Create models directory
RUN mkdir -p /app/models

# Configure HuggingFace to cache in persistent volume
ENV MODEL_CACHE_DIR=/app/models
ENV HF_HOME=/app/models
ENV HF_HUB_CACHE=/app/models/hub

# Copy the model download script and embedding service
COPY backend/services/download-model.py .
COPY backend/services/embedding-service.py .

# Pre-download ECAPA-TDNN model during build (~150MB, cached in layers)
# This eliminates runtime download delays
RUN echo "ðŸ“¥ Pre-downloading ECAPA-TDNN model..." && \
    python3 download-model.py && \
    echo "âœ… Model cached successfully" || \
    (echo "âš ï¸  Model download failed, will retry at runtime" && true)

# Verify model files exist or create empty marker for offline detection
RUN if [ ! -f "/app/models/hub/models--speechbrain--spkrec-ecapa-voxceleb/snapshots/"*/hyperparams.yaml ]; then \
        echo "Model not cached, will download at runtime" > /app/models/download_needed.txt; \
    else \
        echo "Model successfully cached during build" && \
        ls -la /app/models/hub/; \
    fi

# Expose port
EXPOSE 5001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD curl -f http://localhost:5001/health || exit 1

# Run the embedding service
CMD ["python3", "embedding-service.py"]
